.SideBar
  .LeftHeader
    .LeftHeader__List
      %hs.LeftHeader__List__userName
        =current_user.name
      %ul.LeftHeader__List__iconList
        %li.LeftHeader__List__iconList__icon
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.LeftHeader__List__iconList__icon 
          = link_to edit_user_path(current_user) do
            =icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .GroupList__Group
        = link_to group_messages_path(group), class: 'Link' do
          .GroupList__Group__name
            = group.name
          .GroupList__Group__message
            = group.show_last_message