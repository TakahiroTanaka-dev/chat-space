.main-chat__center__box
  .main-chat__center__box__info
    .main-chat__center__box__info__user
      = message.user.name
    .main-chat__center__box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__center__box__message
    - if message.text.present?
      %p.main-chat__center__box__message__content
        = message.text
    = image_tag message.image.url, class: 'main-chat__center__box__message__image' if message.image.present?